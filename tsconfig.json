{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["node", "@playwright/test"],
    "paths": {
      "@/*": ["/*"],
      "@/tests/*": ["tests/*"],
      "@/utils/*": ["utils/*"],
      "@/pages/*": ["pages/*"]
    }
  },
  "include": ["node_modules", "**/*.ts"]
}
